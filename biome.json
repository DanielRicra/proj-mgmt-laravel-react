{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "off"
			},
			"a11y": {
				"useAltText": "warn",
				"noSvgWithoutTitle": "warn",
				"useKeyWithClickEvents": "off"
			}
		}
	}
}
